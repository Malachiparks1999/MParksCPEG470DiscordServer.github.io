{
    "rules": {
      "chats": {
        ".read": "auth.uid != null",
        ".write": "auth.uid != null",
        "$uid": {
          "message": {
            ".read": "auth.uid != null",
            ".write": "!data.exists()",
            ".validate": "newData.val() !== ''",
          "edited": {
              ".validate": "newData.val() === 'true' || newData.val() === 'false'"
            },
            "author": {
              ".validate": "newData.val() === auth.uid"
            },
            "timestamp": {
              ".validate": "newData.isNumber() && newData.val() > 0"
            },
          }
        }
      },
      "users": {
        "$uid": {
          ".read": "auth.uid != null",
          ".write": "auth.uid == $uid"
        }
      }
    }
  }